{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": [
      "ES2020",
      "dom"
    ],
    "jsx": "preserve",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "src//*.ts",
    "src/**/*.ts",
    "src//.d.ts",
    "src/**/.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}